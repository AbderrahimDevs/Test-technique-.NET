@model Test_technique.Models.Candidature

@{
    ViewData["Title"] = "Ajouter candidature";
}
<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="style.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="~/js/site.js" asp-append-version="true"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <div class="container">
        <div class="title">Condidature</div>
        <div style="margin-top:10px">
            Étape 1  :
        </div>
        <div class="content">
            <form method="post" asp-action="Create" enctype="multipart/form-data">
                <div class="user-details">
                    <div class="input-box">
                        <span class="details">Nom <span style="color:red">*</span></span>
                        <input asp-for="Nom" type="text" placeholder="Entrer votre nom" required>
                        <span asp-validation-for="Nom" class="text-danger"></span>
                    </div>
                    <div class="input-box">
                        <span class="details">Prénom <span style="color:red">*</span></span>
                        <input type="text" asp-for="Prenom" placeholder="Entrer votre prénom" required>
                        <span asp-validation-for="Prenom" class="text-danger"></span>
                    </div>
                    <div class="input-box">
                        <span class="details">Email <span style="color:red">*</span></span>
                        <input type="email" asp-for="Mail" placeholder="Entrer votre email" required>
                        <span asp-validation-for="Mail" class="text-danger"></span>
                    </div>
                    <div class="input-box">
                        <span class="details">Téléphone <span style="color:red">*</span></span>
                        <input type="tel" asp-for="Telephone" placeholder="Entrer votre téléphone" required>
                        <span asp-validation-for="Telephone" class="text-danger"></span>
                    </div>
                    <div class="input-box">
                        <span class="details">Niveau d'études</span>
                        <select id="NvEtude" asp-for="NiveauEtude">
                            <option value="Choisissez votre niveau d'études">Choisissez votre niveau d'études</option>
                            <option value="Bac">Bac</option>
                            <option value="Bac+2">Bac + 2</option>
                            <option value="Bac+3">Bac + 3</option>
                            <option value="Bac+5">Bac + 5</option>
                        </select>
                        <span asp-validation-for="NiveauEtude" class="text-danger"></span>
                    </div>
                    <div class="input-box">
                        <span class="details">Nombre d'années d'expérience <span style="color:red">*</span></span>
                        <input type="number" min="0" max="50" asp-for="NbrAnneesExperience" placeholder="Entrer votre Nombre d'années d'expérience" required>
                        <span asp-validation-for="NbrAnneesExperience" class="text-danger"></span>
                    </div>
                    <div class="input-box">
                        <span class="details">Dernier employeur <span style="color:red">*</span></span>
                        <input type="text" asp-for="DernierEmployeur" placeholder="Entrer votre dernier employeur" required>
                        <span asp-validation-for="DernierEmployeur" class="text-danger"></span>
                    </div>
                </div>
                <div style="margin-top:10px">
                    Étape 2 :
                    <div class="user-details">
                        <div class="input-box">
                            <span class="details">Uploader votre CV <span style="color:red">*</span></span> 
                            <input type="file" name="File" asp-for="File" required>
                            <span asp-validation-for="File" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="button">
                    <input type="submit" value="Enregistrer">
                    <a asp-action="Index" class="btn btn-outline-primary mt-1">Retour vers la liste</a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
