@model Test_technique.Models.Candidature

@{
    ViewData["Title"] = "Supprimer candidature";
}

<h2>Supprimer candidature</h2>

<h4>voulez-vous vraiment supprimer cette candidature de<span style="color:Highlight"> @Model.Nom @Model.Prenom </span>?</h4>
<div>
    <hr />
    <h4>Détails de la candidature</h4>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nom)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nom)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Prenom)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Prenom)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Mail)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Mail)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Telephone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Telephone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NiveauEtude)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NiveauEtude)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NbrAnneesExperience)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NbrAnneesExperience)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DernierEmployeur)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DernierEmployeur)
        </dd>
        <dt class="col-sm-2" hidden>
            @Html.DisplayNameFor(model => model.CVURL)
        </dt>
        <dd class="col-sm-10" hidden>
            @Html.DisplayFor(model => model.CVURL)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CondidatureID" />
        <input type="submit" value="Delete" class="btn btn-danger" @*onclick="return confirm('Voulez-vous vraiment de supprimer cette candidature ?');"*@ /> |
        <a asp-action="Index" class="btn btn-outline-primary">Retour vers la liste</a>
    </form>
</div>
